<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen16"
    android:orientation="vertical"
    tools:context="pt.uc.dei.cm.myfinances.activities.SettingsActivity">

    <Spinner
        android:id="@+id/spinner_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen8"/>

    <Switch
        android:id="@+id/local_backup_auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/dimen8"
        android:layout_gravity="left"
        android:text="@string/auto_local_backup"/>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/dimen8"
        android:background="@color/color_light_gray"/>

    <Switch
        android:id="@+id/drive_backup_auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/dimen8"
        android:layout_gravity="left"
        android:text="@string/auto_drive_backup"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/dimen8"
        android:background="@color/color_light_gray"/>

    <Switch
        android:id="@+id/show_percentages"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/dimen8"
        android:layout_gravity="left"
        android:text="@string/show_perc_graph"/>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/dimen8"
        android:background="@color/color_light_gray"/>

    <Switch
        android:id="@+id/show_subtitles"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/dimen8"
        android:layout_gravity="left"
        android:text="@string/show_subt_graph"/>
    
    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/dimen8"
        android:background="@color/color_light_gray"/>

</LinearLayout>