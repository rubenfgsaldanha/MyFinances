<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_drive"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen16"
    android:orientation="vertical"
    tools:context="pt.uc.dei.cm.myfinances.activities.DriveActivity">

    <TextView
        android:id="@+id/textGoogleDrive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen16"
        android:text="@string/textGoogleDrive"
        android:textStyle="bold"
        android:fontFamily="@font/ubuntu"
        android:textSize="17sp"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/btnDriveBackup"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/textGoogleDrive"
        android:layout_marginBottom="@dimen/dimen16"
        android:text="@string/backupDrive"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/ubuntu"
        android:textAllCaps="false"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/btnRestoreDrive"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/btnDriveBackup"
        android:layout_marginBottom="@dimen/dimen8"
        android:text="@string/restoreDrive"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/ubuntu"
        android:textAllCaps="false"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/connected_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnRestoreDrive"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/ubuntu"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnDriveBackup"
        android:progressDrawable="@drawable/custom_progress_bar"
        android:visibility="gone"/>

</RelativeLayout>